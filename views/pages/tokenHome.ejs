<!DOCTYPE html>
<html>
<head>
	<title>TokenHome</title>
	<script> const token=<%- JSON.stringify(token) -%></script>
	<script> const updateTopics=<%- JSON.stringify(updateTopics) -%></script>
	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<script src="/build/tokenHome.bundle.js"></script>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/app.css">
</head>
<body>
<% if (token.hasOwnProperty('error')) { %>
	<div class="alert alert-danger"><%= token.error%></div>
<% } %>
<nav class="navbar navbar-inverse">
	<div class="container-fluid">
		<div class="collapse navbar-collapse">
			<ul class="nav navbar-nav">
				<li class="active"><a href="<%= '/tokenHome/' + token.id -%>">Home</a></li>
				<li><a href="<%= '/tokenHome/' + token.id + '/forum'-%>">Forum</a></li>
				<li><a href="<%= '/tokenHome/' + token.id + '/methods'-%>">Methods</a></li>
				<li><a href="<%= '/tokenHome/' + token.id + '/info'-%>">Info</a></li>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if (typeof(user) != 'undefined') {%>
				<li><%= user.username %></li>
				<% } %>
				<li><a href="/logout"><span class="fa fa-sign-out"></span>Sign out</a></li>
			</ul>
		</div>
	</div>
</nav>
<div class="container-fluid text-left">
	<div class="col-sm-3 sidenav" style="overflow:scroll; height:400px;" >
		<div class="media" id="latestEvents"></div>
	</div>
	<div class="col-sm-6 jumbotron">
		<h1><%= token.name %></h1> 
		<h3>Your account balance is: <span id="accountBalance"><i>undefined</i> </span>  <%= token.name -%></h3>
		<a class="btn btn-default" href="<%= '/tokenHome/' + token.id + '/setAttributes' -%>">Set Attributes of Manager contract</a><small>(Will only work if you are the creator of this token)</small>
	</div>

	<div class="col-sm-3 noticeboard">
		<div style="background-color:lightcyan;" id="update"></div>
		<div style="background-color:burlywood;" id="vote"></div>
		<div style="background-color:lightslategrey;" id="auction"></div>
	</div>
		
</div>

